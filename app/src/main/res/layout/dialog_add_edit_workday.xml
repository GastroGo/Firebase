<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialog_add_edit_workday_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:text="Bearbeiten"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/dialog_add_edit_workday_datebuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/dialog_add_edit_workday_editbuttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_add_edit_workday_text">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog_add_edit_workday_date_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1.5"
                android:backgroundTint="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="12dp"
                android:text="@string/datum"
                android:textColor="@color/blue"
                android:textSize="12sp"
                app:strokeColor="@color/blue"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog_add_edit_workday_time_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1.5"
                android:backgroundTint="@color/white"
                android:textColor="@color/blue"
                app:strokeColor="@color/blue"
                android:ellipsize="end"
                app:strokeWidth="2dp"
                android:maxLines="1"
                android:padding="12dp"
                android:text="@string/zeit"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialog_add_edit_workday_editbuttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_add_edit_workday_datebuttons">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog_add_edit_workday_save_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1.5"
                android:backgroundTint="@color/white"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="12dp"
                android:text="@string/speichern"
                android:textColor="@color/blue"
                android:textSize="12sp"
                app:strokeColor="@color/blue"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dialog_add_edit_workday_cancel_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1.5"
                android:backgroundTint="@color/red"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="12dp"
                android:text="@string/abbrechen"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
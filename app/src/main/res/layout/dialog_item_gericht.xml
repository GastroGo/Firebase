<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">


    <EditText
        android:id="@+id/editTextOrderAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/light_third"
        android:inputType="number"
        android:maxWidth="30dp"
        android:textCursorDrawable="@drawable/custom_cursor" />

    <TextView
        android:id="@+id/textViewOrderGerichtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:text="@string/dish_name" />

    <TextView
        android:id="@+id/textViewOrderGerichtPreis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="@string/price" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/zxing_transparent"
        android:outlineAmbientShadowColor="@color/zxing_transparent"
        android:outlineSpotShadowColor="@color/zxing_transparent"
        android:src="@drawable/ic_muelleimer_icon"
        app:borderWidth="0dp"
        app:fabCustomSize="35dp" />

</LinearLayout>

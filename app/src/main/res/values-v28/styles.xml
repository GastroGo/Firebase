<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item> <!-- Primary text color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- Menu bar color -->
        <item name="colorAccent">@color/colorAccent</item> <!-- Secondary text color -->
        <item name="android:statusBarColor">@color/light_third</item> <!-- Top gradient color -->
        <item name="android:navigationBarColor">@color/black
        </item> <!-- Bottom gradient color -->
        <item name="android:windowBackground">@color/windowBackground
        </item> <!-- Background color -->
    </style>

    <style name="Theme.Login" parent="Base.Theme.Login" />

    <style name="RoundedDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
    </style>

    <style name="BackButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/light_third</item>
        <item name="srcCompat">@drawable/ic_arrow_back</item>
        <item name="borderWidth">0dp</item>
        <item name="fabCustomSize">30dp</item>
        <item name="tint">@color/white</item>
    </style>
</resources>
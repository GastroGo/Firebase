<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Zustand, wenn das Gericht ausgewählt ist -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#50000000" /> <!-- Semi-transparent black for shadow -->
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- Original color -->
                    <stroke android:width="2.7dp" android:color="@color/light_third" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Standardzustand (nicht ausgewählt) -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#50000000" /> <!-- Semi-transparent black for shadow -->
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- Original color -->
                    <stroke android:width="1.5dp" android:color="#000000" />
                    <padding android:bottom="20dp" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".Login"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme"
